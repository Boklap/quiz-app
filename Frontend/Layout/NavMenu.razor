<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">QuizApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/question" Match="NavLinkMatch.All" @onclick="@(_ => MenuSelected("Question"))">
                <span class="bi bi-question-circle-fill-nav-menu" aria-hidden="true"></span> Question
            </NavLink>
            <NavLink class="nav-link" href="/quiz" Match="NavLinkMatch.All" @onclick="@(_ => MenuSelected("Quiz"))">
                <span class="bi bi-file-earmark-text-fill-nav-menu" aria-hidden="true"></span> Quiz
            </NavLink>
            <NavLink class="nav-link" href="/schedule" Match="NavLinkMatch.All" @onclick="@(_ => MenuSelected("Schedule"))">
                <span class="bi bi-calendar-fill-nav-menu" aria-hidden="true"></span> Schedule
            </NavLink>
        </div>
    </nav>
</div>

@code {
    [Parameter] public EventCallback<string> OnMenuChanged { get; set; }

    private void MenuSelected(string menuName)
    {
        OnMenuChanged.InvokeAsync(menuName);
    }
    
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
